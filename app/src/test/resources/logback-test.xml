<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <!--os log a nível de testes, em modo debug, consome quantidade de memória significativa
    do PC-->
    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>